{
  "name": "adexchange-advertiser-bot",
  "version": "1.0.0",
  "description": "AMQP-based advertiser bot for ad exchange",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/bundle.js --external:amqplib --external:pg",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/node": "^20.10.0",
    "esbuild": "^0.27.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
